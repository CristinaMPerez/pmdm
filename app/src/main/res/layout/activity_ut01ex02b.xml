<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ut01.ex02.presentation.Ut01Ex02bActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconflores"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_image"
        app:srcCompat="@drawable/vintage_divider_139" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/titulob"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/contenidob">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconstar"
            android:layout_width="@dimen/width_star"
            android:layout_height="wrap_content"
            android:tint="@color/yellow"
            app:srcCompat="@drawable/iconstar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconstar1"
            android:layout_width="@dimen/width_star"
            android:layout_height="wrap_content"
            android:tint="@color/yellow"
            app:srcCompat="@drawable/iconstar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconstar2"
            android:layout_width="@dimen/width_star"
            android:layout_height="wrap_content"
            android:tint="@color/yellow"
            app:srcCompat="@drawable/iconstar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconstar3"
            android:layout_width="@dimen/width_star"
            android:layout_height="wrap_content"
            android:tint="@color/yellow"
            app:srcCompat="@drawable/iconstar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconstar5"
            android:layout_width="@dimen/width_star"
            android:layout_height="wrap_content"
            android:tint="@color/yellow"
            app:srcCompat="@drawable/iconstar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/corazon"
                android:layout_width="@dimen/width_heart"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_image"
                android:tint="@color/red"
                app:srcCompat="@drawable/iconcorazon" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>